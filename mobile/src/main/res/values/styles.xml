<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SearchView -->
    <style name="Widget.Popcorn.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="goIcon">@android:drawable/ic_menu_search</item>
    </style>

    <style name="Widget.Popcorn.Classic.SearchView" parent="Widget.Popcorn.SearchView"/>

    <!-- Toolbar -->
    <style name="Widget.Popcorn.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.Popcorn.Classic.Toolbar" parent="Widget.Popcorn.Toolbar">
        <item name="android:background">@drawable/classic_toolbar_bkg</item>
    </style>

    <!-- Toolbar title -->
    <style name="Widget.Popcorn.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="Widget.Popcorn.Classic.Toolbar.Title" parent="Widget.Popcorn.Toolbar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Toolbar popup -->
    <style name="Widget.Popcorn.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="Widget.Popcorn.Classic.Toolbar.Popup" parent="Widget.Popcorn.Toolbar.Popup"/>

    <!-- Widget -->
    <style name="Widget.Popcorn.Classic.RatingBar" parent="@android:style/Widget.Holo.RatingBar">
        <item name="android:isIndicator">true</item>
        <item name="android:maxHeight">@dimen/video_rating_size</item>
        <item name="android:minHeight">@dimen/video_rating_size</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressDrawable">@drawable/popcorn_rating_bar</item>
    </style>

    <!-- Prepare Watch -->

    <style name="PrepareWatchProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/popcorn_progress</item>
    </style>

    <style name="PrepareWatchStatusText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Other -->

    <style name="FullscreenDialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="WatchButton">
        <item name="android:background">@drawable/popcorn_watch_selector</item>
        <item name="android:shadowColor">@color/classic_text_shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/classic_watch_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DownloadOpenButton">
        <item name="android:minHeight">@dimen/video_download_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/video_download_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="VideoItemSelectButton">
        <item name="android:background">@drawable/popcorn_spinner</item>
        <item name="android:minHeight">@dimen/video_spinner_height</item>
        <item name="android:textSize">@dimen/video_spinner_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FavoritesToggleButton">
        <item name="android:background">@drawable/popcorn_favorites_bkg</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>
</resources>